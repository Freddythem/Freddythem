using System;
using System.Collections.Generic;
using System.Diagnostics;
using System.Diagnostics.Metrics;
using System.Numerics;
using System.Security;
using System.Text.RegularExpressions;
using static System.Runtime.InteropServices.JavaScript.JSType;

class Program
{
    static void Main()
    {
        string filePath = "E:\\04_Programmierung\\AdventOfCode2025\\Input.txt"; //PC Ade
        //string filePath = "C:\\Users\\meierf\\source\\repos\\ConsoleApp1\\ConsoleApp1\\Input.txt"; //PC Goe
        int lineNumber = 0;
        int lineLength = 0;
        string[][] inputFile;

        long maximumRedTiles = 0;
        long diffX = 0;
        long diffY = 0;
        long redTiles = 0;

        try
        {
            using (StreamReader sr = new StreamReader(filePath))
            {
                lineNumber = File.ReadLines(filePath).Count();

                inputFile = new string[lineNumber][];

                for (int i = 0; i < lineNumber; i++)
                {
                    inputFile[i] = sr.ReadLine().Split(",");
                }
                lineLength = inputFile[0].Length;

                Console.WriteLine($"inputFile.Length: {inputFile.Length} ");
            }

            // check wieder alles durch wie bisher. 
            // ergänzende bedingung, Start 2,3. nimm spalte x, prüfe alle red Tiles in X zwischen Start-Tile und Ende. 


            for (int i = 0; i < inputFile.Length; i++)
            {
                for (int j = 0; j < inputFile.Length; j++)
                {
                    if (i != j)
                    {
                        diffX = Math.Abs(long.Parse(inputFile[i][0]) - long.Parse(inputFile[j][0]));
                        if (diffX != 0)
                        {
                            diffX += 1;
                        }
                        diffY = Math.Abs(long.Parse(inputFile[i][1]) - long.Parse(inputFile[j][1]));
                        if (diffY != 0)
                        {
                            diffY += 1;
                        }

                        redTiles = diffX * diffY;

                        if (redTiles > maximumRedTiles)
                        {
                            maximumRedTiles = redTiles;
                        }
                    }
                }
            }


            Console.WriteLine($"Endergebnis:  {maximumRedTiles} "); //länge Test: 20 (x,y,z)
        }
        catch (Exception e)
        {
            Console.WriteLine("Fehler: " + e.Message);
        }
    }
}
