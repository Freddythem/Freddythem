using System;
using System.Collections.Generic;
using System.Diagnostics;
using System.Diagnostics.Metrics;
using System.Numerics;
using System.Security;
using System.Text.RegularExpressions;
using static System.Runtime.InteropServices.JavaScript.JSType;

class Program
{
    static void Main()
    {
        string filePath = "E:\\04_Programmierung\\AdventOfCode2025\\Input.txt";
        int lineNumber = 0;
        string[] inputFile;

        string[,] mathTable; //1. = spalte, 2. = zeile
        long ergebnisSpalte = 0;
        int counterNoMath = 0;

        try
        {
            using (StreamReader sr = new StreamReader(filePath))
            {
                lineNumber = File.ReadLines(filePath).Count();
                inputFile = new string[lineNumber];

                for (int i = 0; i < lineNumber; i++)
                {
                    inputFile[i] = sr.ReadLine();
                }

                for (int i = 0; i < lineNumber; i++)
                {
                    inputFile[i] = inputFile[i].TrimStart();
                    inputFile[i] = inputFile[i].TrimEnd();
                    inputFile[i] = Regex.Replace(inputFile[i], @"\s+", ",");
                    //Console.WriteLine(inputFile[i]);

                }

                Console.WriteLine($"Neues Programm. Alle Daten aus Input.txt eingelesen. Zeilen: {lineNumber}\n");

                int mathTableLength = inputFile[0].Split(",").Length;

                mathTable = new string[mathTableLength, lineNumber];

                for (int i = 0; i < lineNumber; i++)
                {
                    string[] temp = inputFile[i].Split(",");

                    for (int j = 0; j < temp.Length; j++)
                    {
                        mathTable[j, i] = temp[j];
                        //Console.Write($"{mathTable[j, i]},");
                    }
                    //Console.Write($"\n");
                }

                Console.WriteLine($"\n Tabelle fertig. Jetzt Rechnen \n");

                for (int i = 0; i < mathTableLength ; i++)
                {
                    //Console.WriteLine($"mathTable.Length: {mathTableLength}:");

                    //Console.WriteLine($"Spalte {i}:");

                    long temp = 0;
                    string mathSymbol = mathTable[i, lineNumber-1];

                    for (int j = 0; j < lineNumber - 1; j++)
                    {
                        if (mathSymbol == "+")
                        {
                            temp += int.Parse(mathTable[i, j]);
                            //Console.WriteLine($"Doing Plus: {temp} + {mathTable[i, j]}");
                        }
                        else if (mathSymbol == "*")
                        {
                            if (temp == 0)
                            {
                                temp = 1;
                            }
                            //Console.WriteLine($"Doing Mal: {temp} * {mathTable[i, j]}");
                            temp = temp * int.Parse(mathTable[i, j]);
                        }
                        else
                        {
                            counterNoMath++;
                            //Console.WriteLine($"Kein Mathe: {mathSymbol}");
                        }
                    }
                    ergebnisSpalte += temp;
                    //Console.WriteLine($"Ergebnis Spalte {i} : {temp}, Gesamt: {ergebnisSpalte}");
                }
                Console.WriteLine($"Endergebnis: {ergebnisSpalte} und noMath: {counterNoMath}");



            }
        }
        catch (Exception e)
        {
            Console.WriteLine("Fehler: " + e.Message);
        }
    }

}
