using System;
using System.Collections.Generic;
using System.Numerics;
using System.Security;

class Program
{
    static void Main()
    {

        string filePath = "C:\\Users\\meierf\\source\\repos\\ConsoleApp1\\ConsoleApp1\\InputTest.txt";

        long resultInvalidIds = 0;
        string checkId = "101";
        string teilLinks;
        string teilRechts;


        try
        {
            using (StreamReader sr = new StreamReader(filePath))
            {
                string IdBlocks = sr.ReadLine();

                string[] checkBlock = IdBlocks.Split(",");
                //Console.WriteLine($"Idlock: {IdBlocks}");

                for (int i = 0; i < checkBlock.Length; i++)
                {
                    string[] checkBlockIds = checkBlock[i].Split("-");
                    long startId = long.Parse(checkBlockIds[0]);
                    long endId = long.Parse(checkBlockIds[1]);
                    long actualId = startId;

                    //Console.WriteLine($"StartID: {startId}");
                    for (long j = actualId; actualId <= endId; actualId++)
                    {
                        checkId = actualId.ToString();

                        int counter = 1;

                        while (counter < checkId.Length -1)
                        {
                            teilLinks = checkId.Substring(0, counter);
                            teilRechts = checkId.Substring(counter, counter);

                            if (teilLinks == teilRechts)
                            {
                                Console.WriteLine($"checkId: {checkId} , teilLinks: {teilLinks}, teilRechts: {teilRechts}");
                            }
                            else
                            {

                            }
                                    

                            counter++;
                        }
                        counter = 1;

                        //while (teilLinks == teilRechts)
                        //{
                        //    Console.WriteLine($"While-Schleife: checkID: {checkId} , teilLinks: {teilLinks}, teilRechts: {teilRechts}");
                        //    counter = +1;
                        //    teilLinks = checkId.Substring(0, counter);
                        //    teilRechts = checkId.Substring(counter  , counter);
                        //}


                    }
                    //Console.WriteLine($"EndID: {endId} ");

                }


                Console.WriteLine("Password:" + resultInvalidIds);
            }
        }
        catch (Exception e)
        {
            Console.WriteLine("Fehler: " + e.Message);
        }
    }
}
